<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pl.org.seva.navigator">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".main.NavigatorApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <uses-library android:name="org.apache.http.legacy" android:required="false"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDECNjt1fl18jA2W5O2n3e_JMFueCjEdBs"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="9608349be08009dc4cc83fa48441db4bcc934626" />

        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name_short"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".navigation.NavigationFragment"
            android:label="@string/app_name_short"
            android:launchMode="singleTop" >
        </activity>

        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/settings_activity_label">
        </activity>

        <activity
            android:name=".contact.ContactsActivity"
            android:label="@string/contacts_activity_label">
        </activity>

        <activity
            android:name=".profile.LoginActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".profile.DeleteProfileActivity"
            android:label="@string/delete_user_activity_label" />

        <activity
            android:name=".credits.CreditsActivity"
            android:label="@string/credits_activity_label" />

        <activity
            android:name=".contact.SeekContactActivity"
            android:label="@string/seek_contact_activity_label"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable_contact"/>
        </activity>

        <service android:name="pl.org.seva.navigator.navigation.NavigatorService"/>
    </application>
</manifest>
